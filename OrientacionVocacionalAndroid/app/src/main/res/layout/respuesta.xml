<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:layout_marginLeft="15dp"
	android:layout_marginRight="15dp">

    <TextView
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
		android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Tu vocación es: "
        android:textColor="@color/colorBlack"
        android:textSize="19dp" />

	<RadioGroup
		android:id="@+id/radioGroup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="22dp">
		<RadioButton
			android:id="@+id/vocacionUno"
			android:layout_width="wrap_content"
			android:layout_height="47dp"
			android:textColor="@color/colorPrimary"
			android:text="Si" />
		<RadioButton
			android:id="@+id/vocacionDos"
			android:layout_width="wrap_content"
			android:layout_height="45dp"
			android:textColor="@color/colorPrimary"
			android:text="No" />
		<RadioButton
			android:id="@+id/vocacionTres"
			android:layout_width="wrap_content"
			android:textColor="@color/colorPrimary"
			android:layout_height="45dp"
			android:text="Si" />
	</RadioGroup>

	<TextView
		android:id="@+id/tvResultado"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorBlack"
		android:textAlignment="center"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="30dp"
		android:textSize="17dp"
		android:text="Seleccionar tu vocación"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:gravity="center">
		<Button
			android:id="@+id/btnConectar"
			android:layout_width="170dp"
			android:layout_height="wrap_content"
			android:background="@drawable/botton"
			android:text="Guardar"
			android:onClick="viewGuardar"
			android:textAllCaps="false"
			android:textColor="@color/colorWhite"
			android:textSize="18dp"
			android:textStyle="bold"
			android:typeface="normal" />
	</LinearLayout>

</LinearLayout>
